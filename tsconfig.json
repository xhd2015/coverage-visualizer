{
    "compilerOptions": {
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": false,
        "moduleResolution": "Node",
        "declaration": true,
        "declarationDir": "./types",
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ],
        "lib": [
            "ES2018",
            "DOM",
        ],
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
    ]
}